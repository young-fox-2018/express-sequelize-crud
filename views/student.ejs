<!DOCTYPE <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Student Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/table-styles.css" />
</head>

<body>
    <h1>Students Data</h1>
    <p class="center"><a href="/student/add">Add New Student</a></p>
    
    <table>
        <col width="5%">
        <col width="20%">
        <col width="20%">
        <col width="30%">
        <col width="20%">
        <tr>
            <th>No.</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
        <% for( let i = 0; i < data.length; i++)  {%>
        <tr>
            <td class="center"><%= i+1 %></td>
            <td><%= data[i].first_name %></td>
            <td><%= data[i].last_name %></td>
            <td><%= data[i].email %></td>
            <td class="center"><a href="/student/edit/<%= data[i].id%>"> Edit </a> | <a href="/student/delete/<%= data[i].id%>" onclick="return confirm('Delete this student?')"> Delete </a></td>
        </tr>
        <% } %>
    </table>
</body>
</html>