<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Teacher</h1>
    <ul>
      <%data.forEach(function(teacher){%>
      <li>
        Nama : <%=teacher.first_name %> <%=teacher.last_name %>
        <br>
        Email : <%=teacher.email %>
        <br>
        <a href="teacher/edit/<%=teacher.id%>">Edit</a>
        <a href="teacher/delete/<%=teacher.id%>" onclick="return confirm('Apa anda yakin ingin menghapus data ini?')">Delete</a>
      </li>
      <%})%>
      <li></li>
      <br>
      <a href="teacher/add">Add Teacher</a>
    </ul>
  </body>
</html>